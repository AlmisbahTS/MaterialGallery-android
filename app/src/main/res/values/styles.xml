<resources>

    <style name="DefaultTheme" parent="AppTheme">
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryVariant">@color/primaryVariant</item>
        <item name="colorSecondary">@color/secondary</item>
        <item name="colorBackground">@color/background</item>
        <item name="colorSurface">?android:attr/windowBackground</item>

        <item name="colorOnPrimary">@color/onPrimary</item>
        <item name="colorOnSecondary">@color/onSecondary</item>
        <item name="colorOnBackground">@color/onBackground</item>
        <item name="colorOnSurface">@color/onSurface</item>
    </style>

    <style name="DebugTheme" parent="AppTheme">
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryVariant">@color/primaryVariant</item>
        <item name="colorSecondary">@color/secondary</item>
        <item name="colorBackground">@color/background</item>
        <item name="colorSurface">?android:attr/windowBackground</item>

        <item name="colorOnPrimary">@color/onPrimary</item>
        <item name="colorOnSecondary">@color/onSecondary</item>
        <item name="colorOnBackground">@color/onBackground</item>
        <item name="colorOnSurface">@color/onSurface</item>
    </style>

    <style name="DefaultTheme.LightWindow" />

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.MaterialComponents.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.MaterialComponents.Light" />

    <style name="BottomAppBarTheme" parent="AppTheme">
        <item name="android:textColorSecondary">@color/onSurface</item>
    </style>

    <style name="HideOnScrollBottomAppBarTheme" parent="AppTheme">
        <item name="android:textColorSecondary">@color/surface</item>
    </style>

</resources>
